<h1>
  List of all items
</h1>

<hr>

<form action="/insert_all" method="post">
  <div>
    <label for="name_box">
      Name
    </label>

    <input type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="space_box">
      Space
    </label>

    <input type="text" id="space_box" name="query_space">
  </div>

  <div>
    <label for="original_price_box">
      Original Price
    </label>

    <input type="number" id="original_price_box" name="query_original_price">
  </div>

  <div>
    <label for="selling_price_box">
      Selling Price
    </label>

    <input type="number" id="selling_price_box" name="query_selling_price">
  </div> 

  <div>
    <label for="brand_box">
      Brand
    </label>

    <input type="text" id="brand_box" name="query_brand">
  </div> 

  <div>
    <label for="description_box">
      Description
    </label>

    <textarea id="description_box" name="query_description" rows="3"></textarea>
  </div>

  <div>
    <label for="owner_box">
      Owner
    </label>

    <input type="text" id="owner_box" name="query_owner">
  </div> 


  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image">
  </div>

  <button>
    Create item
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Space
    </th>

    <th>
      Original Price
    </th>
  

    <th>
      Selling Price
    </th>


    <th>
      Brand
    </th>


    <th>
      Description
    </th>

    <th>
      Owner
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_all.each do |all| %>
  <tr>
    <td>
      <%= all.id %>
    </td>

    <td>
      <img src="<%= all.image %>" style="width:250px;">
    </td>

    <td>
      <%= all.name %>
    </td>

    <td>
      <%= all.original_price %>
    </td>

    <td>
      <%= all.selling_price %>
    </td>


    <td>
      <%= all.brand %>
    </td>


    <td>
      <%= all.description %>
    </td>


    <td>
      <%= all.owner %>
    </td>

    <td>
      <a href="/all/<%= all.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
